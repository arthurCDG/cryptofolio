<section class="sign form-container">
  <form method="post" action="/auth/signup" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="firstname" class="label-ref label">Firstname</label>
      <input id="firstname" name="firstName" type="text" class="input-text input" placeholder="Satoshi">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="lastname" class="label-ref label">Last Name</label>
      <input id="lastname" name="lastName" type="text" class="input-text input" placeholder="Nakamoto">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email &nbsp; &nbsp; </label>
      <input id="email" name="email" type="email" class="input-text input" placeholder="satoshinakamoto@bitcoin.com">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password </label>
      <input id="password" name="password" type="password" class="input-text input" placeholder="••••••">
    </div>
    <button class="button-primary white">Create Account</button>
  </form>
  <p class="form-sub-infos">Already have an account? <a href="/auth/signin" class="button-link-form">Sign In</a></p>
</section>